@page
@model GamesModel
@{
    ViewData["Title"] = "Games";
}

<h1>Games</h1>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var game in Model.Games)
        {
            <tr>
                <td>@game.Date</td>
                <td>@game.Name</td>
                <td>
                    <a asp-page="./GameDetail" asp-route-id="@game.Id">edit</a>
                    <button type="submit" asp-page-handler="delete"
                            asp-route-id="@game.Id">
                        delete
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

