@page
@model GameDetailModel
@{
    ViewData["Title"] = "Game Details";
}

<h1>@Model.Game.Name  Details</h1>

<form class="GameDetail form-inline" method="post">
    <div class="form-group">
        <label asp-for="@Model.Game.Name"></label>
        <input asp-for="@Model.Game.Name" />
        <span asp-validation-for="@Model.Game.Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Game.Date"></label>
        <input asp-for="@Model.Game.Date" />
        <span asp-validation-for="@Model.Game.Date"></span>
    </div>
    @if (Model.Game?.Venue != null)
    {
        <partial name="_VenuePartial" for="@Model.Game.Venue" />
    }

    @if (Model.Game.Rounds.Any())
    {
        <partial name="_RoundPartial" for="@Model.Game.Rounds[0]" />
    }

    <div>
        <input type="submit" value="Save" />
    </div>
</form>
